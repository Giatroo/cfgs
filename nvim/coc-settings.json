{
    "html.autoClosingTags": true,
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd",
    "suggest.maxCompleteItemCount": 10,

    // Explorer
    "explorer.width": 20,
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.source": "vim-devicons",
    "explorer.previewAction.onHover": false,
    "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
    "explorer.file.root.template": "[icon & 1] PROJECT ([root])",

    // Spell checker
    "cSpellExt.enableDictionaries": ["portuguese-brazilian"],
    "cSpell.language": "en,pt,pt_BR",
    "cSpell.userWords": [
      "Escrevivel",
      "Kruskal",
      "clangd",
      "dtype",
      "ende",
      "firenvim",
      "gruvbox",
      "ipython",
      "kargs",
      "numpy",
      "pygame",
      "sklearn",
      "ultisnips"
    ],

    // Jedi
    "jedi.enable": true,
    "jedi.startupMessage": true,
    // "jedi.jediSettings.autoImportModules": ["numpy", "pandas", "matplotlib",
      // "sklearn", "pygame"],


  "diagnostic-languageserver.filetypes": {
    "python": "pylint"
  },
  "diagnostic-languageserver.linters": {
    "pylint": {
      "sourceName": "pylint",
      "command": "pylint",
      "args": [
        "--output-format",
        "text",
        "--score",
        "no",
        "--msg-template",
        "'{line}:{column}:{category}:{msg} ({msg_id}:{symbol})'",
        "%file"
      ],
      "formatPattern": [
        "^(\\d+?):(\\d+?):([a-z]+?):(.*)$",
        {
          "line": 1,
          "column": 2,
          "security": 3,
          "message": 4
        }
      ],
      "rootPatterns": [".git", "pyproject.toml", "setup.py"],
      "securities": {
        "informational": "hint",
        "refactor": "info",
        "convention": "info",
        "warning": "warning",
        "error": "error",
        "fatal": "error"
      },
      "offsetColumn": 1,
      "formatLines": 1
    }
  },

  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black", "isort", "docformatter"]
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["-q", "-"]
    },
    "isort": {
      "command": "isort",
      "args": ["-q", "-"]
    },
    "docformatter": {
      "command": "docformatter",
      "args": ["-"]
    }
  }

}
